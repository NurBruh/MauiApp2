<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.AddBookPage"
             Title="Добавить книгу">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Entry x:Name="titleEntry" Placeholder="Название книги"/>
        <Entry x:Name="authorEntry" Placeholder="Автор"/>
        <Entry x:Name="genreEntry" Placeholder="Жанр"/>
        <Editor x:Name="descriptionEditor" Placeholder="Описание" HeightRequest="100"/>
        <Button Text="Сохранить" Clicked="OnSaveClicked"/>


    </VerticalStackLayout>
</ContentPage>