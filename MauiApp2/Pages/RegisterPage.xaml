<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Entry x:Name="usernameEntry" Placeholder="Ваш новый логин"/>
        <Entry x:Name="passwordEntry" Placeholder="Придумайте пароль" IsPassword="True"/>
        <Button Text="Создать аккаунт" Clicked="RegisterButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>